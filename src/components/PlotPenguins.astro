---
import PlotFigure from "../components/PlotFigure.astro";
import * as Plot from "@observablehq/plot";
import penguins from "../assets/penguins.json";

export interface Props {
  species?: string;
}

const { species = "Gentoo" } = Astro.props;
const penguinsFiltred = penguins.filter((p) => p.species === species);

const options = {
  marks: [
    Plot.dot(penguinsFiltred, {
      x: "culmen_length_mm",
      y: "culmen_depth_mm",
      stroke: "species",
    }),
  ],
};
---

<PlotFigure options={options} />
